# LiveKit Configuration
LIVEKIT_URL=ws://localhost:7880
LIVEKIT_API_KEY=your_api_key_here
LIVEKIT_API_SECRET=your_secret_here
LIVEKIT_ROOM_NAME=voice-agent-room

# Whisper STT Configuration
WHISPER_MODEL=medium
WHISPER_DEVICE=auto
WHISPER_COMPUTE_TYPE=int8

# LLM Configuration (Ollama)
OLLAMA_BASE_URL=http://localhost:11434
LLM_MODEL=llama3.1:8b-instruct-q4_K_M
LLM_FALLBACK=mistral:7b-instruct-q4_K_M
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=512

# TTS Configuration
TTS_PRIMARY=kokoro
TTS_FALLBACK=piper
TTS_VOICE=en-US-kokoro
TTS_SPEED=1.0

# ElevenLabs Integration (Optional - for premium audio quality)
# Get your API key from: https://elevenlabs.io/app/developers/api-keys
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# ElevenLabs STT Configuration
ELEVENLABS_STT_MODEL=eleven_multilingual_v2
ELEVENLABS_STT_LANGUAGE=auto
ELEVENLABS_STT_TIMEOUT=30

# ElevenLabs TTS Configuration  
ELEVENLABS_TTS_MODEL=eleven_multilingual_v2
ELEVENLABS_TTS_VOICE_ID=auto
ELEVENLABS_TTS_TIMEOUT=30
ELEVENLABS_TTS_STABILITY=0.5
ELEVENLABS_TTS_SIMILARITY_BOOST=0.75
ELEVENLABS_TTS_STYLE=0.0
ELEVENLABS_TTS_USE_SPEAKER_BOOST=true

# ElevenLabs Voice Presets (uncomment to use specific voices)
# English Voices
# ELEVENLABS_VOICE_EN_FEMALE=21m00Tcm4TlvDq8ikWAM  # Rachel (young, pleasant)
# ELEVENLABS_VOICE_EN_MALE=pNInz6obpgDQGcFmaJgB    # Adam (deep, mature)
# ELEVENLABS_VOICE_EN_MALE_YOUNG=yoZ06aMxZJJ28mfd3POQ  # Sam (young adult)
# ELEVENLABS_VOICE_EN_FEMALE_STRONG=AZnzlk1XvdvUeBnXmlld  # Domi (strong, confident)

# French Voices  
# ELEVENLABS_VOICE_FR_FEMALE=XB0fDUnXU5powFXDhCwa  # Charlotte
# ELEVENLABS_VOICE_FR_MALE=ErXwobaYiN019PkySvjV    # Antoine

# VAD Configuration
VAD_THRESHOLD=0.5
VAD_MIN_SILENCE_DURATION=0.5
VAD_SPEECH_PAD=0.2

# Audio Configuration
SAMPLE_RATE=16000
CHANNELS=1
CHUNK_SIZE=1024

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Development
DEBUG=false
VERBOSE=false